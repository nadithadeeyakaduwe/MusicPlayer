<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="363dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMusic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/music"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivMusic"
            android:layout_toRightOf="@+id/ivMusic"
            android:text="Song Name"
            android:textColor="#7019c1"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="116dp" />

        <TextView
            android:id="@+id/txtSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewPlay"
            android:layout_toEndOf="@+id/ivMusic"
            android:layout_toRightOf="@+id/ivMusic"
            android:text="Singer Name"
            android:textColor="#19c165"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="116dp" />

        <ImageView
            android:id="@+id/imageViewPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageViewStop"
            android:layout_toStartOf="@+id/imageViewStop"
            app:srcCompat="@drawable/play"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="45dp" />

        <ImageView
            android:id="@+id/imageViewStop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            app:srcCompat="@drawable/stop" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>